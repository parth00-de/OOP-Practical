#include <iostream>
using namespace std;

class Bank_account {
    string name;
    string Acc_type;
    long int Acc_number;
    float amount;

public:
    Bank_account(string n, string t, long int a, float b) {
        name = n;
        Acc_type = t;
        Acc_number = a;
        amount = b;
    }

    void display();
    void withdraw();
    void deposit();
};

void Bank_account::display() {
    cout << "\n=====================================\n";
    cout << "        Account Information          \n";
    cout << "=====================================\n";
    cout << "Name           : " << name << endl;
    cout << "Account Type   : " << Acc_type << endl;
    cout << "Account Number : " << Acc_number << endl;
    cout << "Balance        : ₹" << amount << endl;
    cout << "=====================================\n";
}

void Bank_account::withdraw() {
    float w;
    cout << "\nEnter amount to withdraw: ₹";
    cin >> w;

    if (w > amount) {
        cout << "\nInsufficient balance! Withdrawal failed.\n";
    } else {
        amount -= w;
        cout << "\nWithdrawal successful!\n";
        cout << "Amount withdrawn : ₹" << w << endl;
        cout << "Remaining Balance: ₹" << amount << endl;
    }
    cout << "-------------------------------------\n";
}

void Bank_account::deposit() {
    float d;
    cout << "\nEnter amount to deposit: ₹";
    cin >> d;
    amount += d;
    cout << "\nDeposit successful!\n";
    cout << "Amount deposited : ₹" << d << endl;
    cout << "Updated Balance  : ₹" << amount << endl;
    cout << "-------------------------------------\n";
}

int main() {
    string n, t;
    long int a;
    float b;

    cout << "=====================================\n";
    cout << "     Welcome to Simple Bank          \n";
    cout << "=====================================\n";

    cout << "Enter name (no spaces): ";
    cin >> n;
    cout << "Enter account type (e.g., savings): ";
    cin >> t;
    cout << "Enter account number: ";
    cin >> a;
    cout << "Enter initial balance: ₹";
    cin >> b;

    Bank_account details(n, t, a, b);

    int choice;
    char ch1;

    do {
        cout << "\n=====================================\n";
        cout << "              MAIN MENU              \n";
        cout << "=====================================\n";
        cout << "1. View Bank Details\n";
        cout << "2. Withdraw Money\n";
        cout << "3. Deposit Money\n";
        cout << "-------------------------------------\n";
        cout << "Enter your choice (1-3): ";
        cin >> choice;

        switch (choice) {
            case 1:
                details.display();
                break;
            case 2:
                details.withdraw();
                break;
            case 3:
                details.deposit();
                break;
            default:
                cout << "\nInvalid choice! Please select 1, 2, or 3.\n";
        }

        cout << "\nWould you like to perform another operation? (y/n): ";
        cin >> ch1;

    } while (ch1 == 'Y' || ch1 == 'y');

    cout << "\nThank you for banking with us. Have a great day!\n";
    cout << "=====================================\n";

    return 0;
}